<h1>Login!</h1>

<% if current_user %>
  <script type="text/javascript">
    window.location.href="/posts";
  </script>
<% end %>

<%= form_tag 'login' do %>
  <%= label_tag :email%>
  <%= text_field_tag :email%>
  <br>
  <br>
  <%= label_tag :password%>
  <%= password_field_tag :password%>
  <br>
  <br>
  <%= submit_tag %>

<% end %>
